<%- include('layout/_header') %>
        <div class="container-el">
            <form action="/update/<%= user._id %>" method="post" id="add-form" enctype="multipart/form-data">
                <span>
                    <h1>Edit User (<%= user.name %>)</h1>
                </span>
                <div class="input-el">
                    <label for="name">Name:</label><br/>
                    <input type="text" id="name" name="name" value="<%= user.name %>" placeholder="Enter name Here" autocomplete="on" required>
                </div>
                <div class="input-el">
                    <label for="email">Email:</label><br/>
                    <input type="email" id="email" name="email" value="<%= user.email %>"  placeholder="Enter email Here" autocomplete="on" required>
                </div>
                <div class="input-el">
                    <label for="phone">Phone:</label><br/>
                    <input type="tel" id="phone" name="phone" value="<%= user.phone %>"  placeholder="Enter phone Here" autocomplete="on" required>
                </div>
                <div class="input-el">
                    <input type="submit" name="submit" value="Update User" class="input-el-btn">
                </div>
            </form>
        </div>
   </div>

   <%- include('layout/_footer') %>
